<Window x:Class="HealthSphere.Windows.RegistrarWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthSphere.Windows"
        mc:Ignorable="d"
        Title="RegistrarWindow" Height="450" Width="800">
    <Grid>
        <TabControl>
            <TabItem Header="Главная">
                <Grid>
                    <Border MaxWidth="400" VerticalAlignment="Center">
                        <StackPanel>
                            <Button Margin="10" Height="50" FontSize="20" Click="NewRecord_Click">Запись на приём</Button>
                            <Button Margin="10" Height="50" FontSize="20" Click="NewPatient_Click">Создать карточку пациента</Button>
                        </StackPanel>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="Пациенты">
                <Frame Name="Frame2"/>
            </TabItem>
            <TabItem Header="Доктора">
                <Frame Name="Frame3"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
