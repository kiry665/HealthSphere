<Window x:Class="HealthSphere.Windows.PatientInfoWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HealthSphere.Windows"
        mc:Ignorable="d"
        Title="Карточка пациента" Height="700" Width="850">
    
    <Grid Background="#ffdadada">
        <Border Background="White" Margin="20" CornerRadius="20" Padding="30" VerticalAlignment="Center" MinWidth="600" MaxWidth="800">
            <StackPanel>
                <TextBlock Name="fio_TB" FontSize="30" FontWeight="Bold" Margin="0 0 0 10"></TextBlock>
                <TextBlock Name="birth_TB" Text="Дата рождения: " FontSize="20" Margin="0 0 0 5"></TextBlock>
                <TextBlock Name="policy_TB" Text="№ полиса: " FontSize="20" Margin="0 0 0 5"></TextBlock>
                <Expander Margin="0 0 0 5">
                    <Expander.Header>
                        <TextBlock FontSize="20">Текущие записи</TextBlock>
                    </Expander.Header>
                    <DataGrid Name="Table_Current" IsReadOnly="True" AutoGeneratingColumn="Table_AutoGeneratingColumn" AutoGeneratedColumns="Table_Current_AutoGeneratedColumns">
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Header="">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Отменить" Click="ButtonCancel_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="Специальность" Binding="{Binding doctor.specialization.name_speciality}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>
                <Expander Margin="0 0 0 5">
                    <Expander.Header>
                        <TextBlock FontSize="20">История записей</TextBlock>
                    </Expander.Header>
                    <DataGrid Name="Table_History" IsReadOnly="True" AutoGeneratingColumn="Table_AutoGeneratingColumn" AutoGeneratedColumns="Table_History_AutoGeneratedColumns">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Специальность" Binding="{Binding doctor.specialization.name_speciality}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Expander>
                <Button FontSize="20" Height="45" Click="Button_Click">Записать на приём</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
